<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Available Jobs</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      min-height: 100vh;
      display: flex;
      background: #f5f7fa;
    }

    .sidebar {
      width: 260px;
      background: white;
      box-shadow: 2px 0 10px rgba(0,0,0,0.1);
      position: fixed;
      height: 100vh;
      overflow-y: auto;
      z-index: 100;
      transition: transform 0.3s ease;
    }

    .sidebar.collapsed {
      transform: translateX(-260px);
    }

    .sidebar-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 25px 20px;
      color: white;
    }

    .sidebar-header h1 {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 4px;
    }

    .sidebar-header p {
      font-size: 13px;
      opacity: 0.9;
    }

    .sidebar nav {
      padding: 20px 0;
    }

    .sidebar nav a {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 14px 20px;
      color: #333;
      text-decoration: none;
      transition: all 0.3s ease;
      font-size: 15px;
      font-weight: 500;
      border-left: 3px solid transparent;
    }

    .sidebar nav a:hover {
      background: #f8f9fa;
      border-left-color: #667eea;
    }

    .sidebar nav a.active {
      background: linear-gradient(90deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.05) 100%);
      color: #667eea;
      border-left-color: #667eea;
    }

    .sidebar nav a span:first-child {
      font-size: 18px;
      width: 24px;
      text-align: center;
    }

    .main-content {
      margin-left: 260px;
      flex: 1;
      min-height: 100vh;
      transition: margin-left 0.3s ease;
    }

    .main-content.expanded {
      margin-left: 0;
    }

    .top-bar {
      background: white;
      padding: 20px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      position: sticky;
      top: 0;
      z-index: 50;
    }

    .top-bar h2 {
      font-size: 24px;
      font-weight: 600;
      color: #333;
    }

    .top-bar-right {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .back-btn {
      background: #f8f9fa;
      color: #333;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .back-btn:hover {
      background: #e9ecef;
    }

    .content-area {
      padding: 30px;
    }

    .job-count {
      background: white;
      padding: 16px 24px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      margin-bottom: 24px;
      font-size: 16px;
      font-weight: 600;
      color: #333;
      display: inline-block;
    }

    .job-count span {
      color: #667eea;
    }

    .cards-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
      gap: 20px;
    }

    .job-card {
      background: white;
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      transition: all 0.3s ease;
      border-left: 4px solid #667eea;
    }

    .job-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
    }

    .job-card-header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 16px;
    }

    .company-icon {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 20px;
      font-weight: 600;
      flex-shrink: 0;
    }

    .job-header-info {
      flex: 1;
    }

    .job-title {
      font-size: 18px;
      font-weight: 600;
      color: #333;
      margin-bottom: 4px;
    }

    .company-name {
      font-size: 15px;
      color: #667eea;
      font-weight: 500;
    }

    .job-details {
      font-size: 13px;
      color: #666;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .job-details strong {
      color: #333;
      min-width: 80px;
    }

    .job-meta {
      display: flex;
      gap: 15px;
      margin: 12px 0;
      font-size: 12px;
      color: #888;
      flex-wrap: wrap;
    }

    .job-meta span {
      display: flex;
      align-items: center;
      gap: 4px;
    }

    .job-actions {
      display: flex;
      gap: 10px;
      margin-top: 16px;
      padding-top: 16px;
      border-top: 1px solid #f0f0f0;
    }

    .btn {
      flex: 1;
      padding: 10px;
      border: none;
      border-radius: 8px;
      font-size: 13px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-block;
      text-align: center;
    }

    .btn-view {
      background: #3498db;
      color: white;
      box-shadow: 0 2px 8px rgba(52, 152, 219, 0.3);
    }

    .btn-view:hover {
      background: #2980b9;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(52, 152, 219, 0.4);
    }

    .menu-toggle {
      background: none;
      border: none;
      font-size: 24px;
      cursor: pointer;
      color: #333;
      padding: 8px;
      border-radius: 6px;
      transition: background 0.2s ease;
    }

    .menu-toggle:hover {
      background: #f0f0f0;
    }

    .loading {
      text-align: center;
      padding: 60px 20px;
      color: #667eea;
      font-size: 16px;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #888;
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .empty-state-icon {
      font-size: 64px;
      margin-bottom: 16px;
      opacity: 0.5;
    }

    .empty-state-text {
      font-size: 16px;
      margin-bottom: 8px;
    }

    .empty-state-subtext {
      font-size: 14px;
      color: #999;
    }

    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 99;
    }

    .overlay.active {
      display: block;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-260px);
      }

      .sidebar:not(.collapsed) {
        transform: translateX(0);
      }

      .main-content {
        margin-left: 0;
      }

      .overlay.active {
        display: block;
      }

      .cards-grid {
        grid-template-columns: 1fr;
      }

      .job-actions {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <aside class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <h1>Student Portal</h1>
      <p>Placement Management System</p>
    </div>
    <nav>
      <a href="/student/dashboard">
        <span>üìä</span>
        <span>Dashboard</span>
      </a>
      <a href="/student/profile">
        <span>üë§</span>
        <span>My Profile</span>
      </a>
      <a href="/student/jobs" class="active">
        <span>üíº</span>
        <span>Available Jobs</span>
      </a>
      <a href="/student/applications">
        <span>üìù</span>
        <span>My Applications</span>
      </a>
    </nav>
  </aside>

  <div class="overlay" id="overlay"></div>

  <main class="main-content" id="mainContent">
    <div class="top-bar">
      <div style="display: flex; align-items: center; gap: 15px;">
        <button class="menu-toggle" type="button">‚ò∞</button>
        <h2>Available Jobs</h2>
      </div>
      <div class="top-bar-right">
        <a href="/student/dashboard" class="back-btn">‚Üê Back to Dashboard</a>
      </div>
    </div>

    <div class="content-area">
      <div class="job-count" id="jobCount">Loading...</div>
      
      <div id="jobsContainer">
        <div class="loading">Loading available jobs...</div>
      </div>
    </div>
  </main>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const mainContent = document.getElementById('mainContent');
      const overlay = document.getElementById('overlay');
      
      if (sidebar && mainContent) {
        sidebar.classList.toggle('collapsed');
        
        if (window.innerWidth > 768) {
          mainContent.classList.toggle('expanded');
        } else {
          if (overlay) {
            overlay.classList.toggle('active');
          }
        }
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      const menuToggle = document.querySelector('.menu-toggle');
      const overlay = document.getElementById('overlay');
      
      if (menuToggle) {
        menuToggle.addEventListener('click', toggleSidebar);
      }
      
      if (overlay) {
        overlay.addEventListener('click', function() {
          if (window.innerWidth <= 768) {
            toggleSidebar();
          }
        });
      }
    });

    async function loadJobs() {
      try {
        const res = await fetch("/api/students/jobs", {
          credentials: "include"
        });

        const data = await res.json();

        if (!data.success) {
          showError("Failed to load jobs");
          return;
        }

        document.getElementById("jobCount").innerHTML = 
          `Total Jobs Available: <span>${data.count || data.jobs.length}</span>`;

        displayJobs(data.jobs);

      } catch (err) {
        console.error('Error loading jobs:', err);
        showError("Error loading jobs. Please try again.");
      }
    }

    function displayJobs(jobs) {
      const container = document.getElementById("jobsContainer");
      
      if (!jobs || jobs.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <div class="empty-state-icon">üíº</div>
            <div class="empty-state-text">No Jobs Available</div>
            <div class="empty-state-subtext">Check back later for new opportunities</div>
          </div>
        `;
        return;
      }

      const grid = document.createElement('div');
      grid.className = 'cards-grid';

      jobs.forEach(job => {
        const deadlineDate = new Date(job.deadline);
        const formattedDeadline = deadlineDate.toLocaleDateString('en-US', { 
          month: 'short', 
          day: 'numeric',
          year: 'numeric'
        });

        const companyInitial = job.companyId?.name?.charAt(0).toUpperCase() || 'C';
        
        const branchesHTML = job.eligibility?.allowedBranches?.length > 0
          ? job.eligibility.allowedBranches.map(branch => 
              `<span class="branch-tag">${branch}</span>`
            ).join('')
          : '<span class="branch-tag">All Branches</span>';

        const card = document.createElement('div');
        card.className = 'job-card';
        card.innerHTML = `
          <div class="job-card-header">
            <div class="company-icon">${companyInitial}</div>
            <div class="job-header-info">
              <div class="job-title">${job.title}</div>
              <div class="company-name">${job.companyId?.name || 'Company'}</div>
            </div>
          </div>

          <div class="job-details">
            <strong>üí∞ Salary:</strong>
            <span>‚Çπ${job.salary} LPA</span>
          </div>

          <div class="job-details">
            <strong>üéì Min CGPA:</strong>
            <span>${job.eligibility?.minCGPA || 'N/A'}</span>
          </div>

          <div class="job-details">
            <strong>üìÖ Graduation Year:</strong>
            <span>${job.eligibility?.graduationYear || 'N/A'}</span>
          </div>

          <div class="job-meta">
            <span>‚è∞ Deadline: ${formattedDeadline}</span>
          </div>

          <div class="job-actions">
            <a href="/student/jobs/${job._id}" class="btn btn-view">View Details & Apply</a>
          </div>
        `;

        grid.appendChild(card);
      });

      container.innerHTML = '';
      container.appendChild(grid);
    }

    function showError(message) {
      document.getElementById("jobCount").textContent = "Total Jobs: 0";
      document.getElementById("jobsContainer").innerHTML = `
        <div class="empty-state">
          <div class="empty-state-icon">‚ö†Ô∏è</div>
          <div class="empty-state-text">${message}</div>
          <div class="empty-state-subtext">Please try refreshing the page</div>
        </div>
      `;
    }

    loadJobs();
  </script>
</body>
</html>