<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Details</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      min-height: 100vh;
      display: flex;
      background: #f5f7fa;
    }

    .sidebar {
      width: 260px;
      background: white;
      box-shadow: 2px 0 10px rgba(0,0,0,0.1);
      position: fixed;
      height: 100vh;
      overflow-y: auto;
      z-index: 100;
      transition: transform 0.3s ease;
    }

    .sidebar.collapsed {
      transform: translateX(-260px);
    }

    .sidebar-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 25px 20px;
      color: white;
    }

    .sidebar-header h1 {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 4px;
    }

    .sidebar-header p {
      font-size: 13px;
      opacity: 0.9;
    }

    .sidebar nav {
      padding: 20px 0;
    }

    .sidebar nav a {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 14px 20px;
      color: #333;
      text-decoration: none;
      transition: all 0.3s ease;
      font-size: 15px;
      font-weight: 500;
      border-left: 3px solid transparent;
    }

    .sidebar nav a:hover {
      background: #f8f9fa;
      border-left-color: #667eea;
    }

    .sidebar nav a.active {
      background: linear-gradient(90deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.05) 100%);
      color: #667eea;
      border-left-color: #667eea;
    }

    .sidebar nav a span:first-child {
      font-size: 18px;
      width: 24px;
      text-align: center;
    }

    .main-content {
      margin-left: 260px;
      flex: 1;
      min-height: 100vh;
      transition: margin-left 0.3s ease;
    }

    .main-content.expanded {
      margin-left: 0;
    }

    .top-bar {
      background: white;
      padding: 20px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      position: sticky;
      top: 0;
      z-index: 50;
    }

    .top-bar h2 {
      font-size: 24px;
      font-weight: 600;
      color: #333;
    }

    .back-btn {
      background: #f8f9fa;
      color: #333;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .back-btn:hover {
      background: #e9ecef;
    }

    .content-area {
      padding: 30px;
      max-width: 1000px;
      margin: 0 auto;
    }

    .job-header {
      background: white;
      border-radius: 12px;
      padding: 30px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      margin-bottom: 20px;
    }

    .job-title {
      font-size: 28px;
      font-weight: 600;
      color: #333;
      margin-bottom: 12px;
    }

    .job-company {
      font-size: 18px;
      color: #667eea;
      margin-bottom: 16px;
      font-weight: 500;
    }

    .job-meta {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      font-size: 14px;
      color: #666;
    }

    .meta-item {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .status-badge {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 13px;
      font-weight: 600;
      text-transform: uppercase;
      background: #d4edda;
      color: #27ae60;
    }

    .details-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .detail-card {
      background: white;
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .detail-card.full-width {
      grid-column: 1 / -1;
    }

    .card-header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 20px;
      padding-bottom: 12px;
      border-bottom: 2px solid #f0f0f0;
    }

    .card-icon {
      width: 40px;
      height: 40px;
      border-radius: 10px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 20px;
    }

    .card-title {
      font-size: 18px;
      font-weight: 600;
      color: #333;
    }

    .info-row {
      display: flex;
      padding: 10px 0;
      border-bottom: 1px solid #f5f5f5;
    }

    .info-row:last-child {
      border-bottom: none;
    }

    .info-label {
      font-weight: 600;
      color: #666;
      min-width: 140px;
      font-size: 14px;
    }

    .info-value {
      color: #333;
      font-size: 14px;
      flex: 1;
    }

    .description-text {
      color: #333;
      font-size: 15px;
      line-height: 1.6;
    }

    .branches-list {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .branch-tag {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      color: #667eea;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 13px;
      font-weight: 500;
      border: 1px solid rgba(102, 126, 234, 0.2);
    }

    .action-section {
      background: white;
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      display: flex;
      gap: 15px;
      align-items: center;
      flex-wrap: wrap;
    }

    .btn {
      padding: 12px 32px;
      border: none;
      border-radius: 8px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .btn-apply {
      background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
      color: white;
      box-shadow: 0 4px 15px rgba(39, 174, 96, 0.3);
      flex: 1;
    }

    .btn-apply:hover:not(:disabled) {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(39, 174, 96, 0.4);
    }

    .btn-apply:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .btn-back {
      background: #f8f9fa;
      color: #333;
    }

    .btn-back:hover {
      background: #e9ecef;
    }

    .message {
      margin-top: 16px;
      padding: 12px 16px;
      border-radius: 8px;
      text-align: center;
      font-size: 14px;
      font-weight: 500;
      display: none;
      width: 100%;
    }

    .message.success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
      display: block;
    }

    .message.error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
      display: block;
    }

    .loading {
      text-align: center;
      padding: 60px 20px;
      color: #667eea;
      font-size: 16px;
    }

    .error {
      background: white;
      border-radius: 12px;
      padding: 40px;
      text-align: center;
      color: #e74c3c;
      font-size: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .menu-toggle {
      background: none;
      border: none;
      font-size: 24px;
      cursor: pointer;
      color: #333;
      padding: 8px;
      border-radius: 6px;
      transition: background 0.2s ease;
    }

    .menu-toggle:hover {
      background: #f0f0f0;
    }

    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 99;
    }

    .overlay.active {
      display: block;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-260px);
      }

      .sidebar:not(.collapsed) {
        transform: translateX(0);
      }

      .main-content {
        margin-left: 0;
      }

      .overlay.active {
        display: block;
      }

      .details-grid {
        grid-template-columns: 1fr;
      }

      .job-meta {
        flex-direction: column;
      }

      .info-row {
        flex-direction: column;
        gap: 4px;
      }

      .info-label {
        min-width: auto;
      }

      .action-section {
        flex-direction: column;
      }

      .btn {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <aside class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <h1>Student Portal</h1>
      <p>CampusHire</p>
    </div>
    <nav>
      <a href="/student/dashboard">
        <span>üìä</span>
        <span>Dashboard</span>
      </a>
      <a href="/student/profile">
        <span>üë§</span>
        <span>My Profile</span>
      </a>
      <a href="/student/jobs" class="active">
        <span>üíº</span>
        <span>Available Jobs</span>
      </a>
      <a href="/student/applications">
        <span>üìù</span>
        <span>My Applications</span>
      </a>
    </nav>
  </aside>

  <div class="overlay" id="overlay"></div>

  <main class="main-content" id="mainContent">
    <div class="top-bar">
      <div style="display: flex; align-items: center; gap: 15px;">
        <button class="menu-toggle" type="button">‚ò∞</button>
        <h2>Job Details</h2>
      </div>
      <a href="/student/jobs" class="back-btn">‚Üê Back to Jobs</a>
    </div>

    <div class="content-area">
      <div id="content">
        <div class="loading">Loading job details...</div>
      </div>
    </div>
  </main>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const mainContent = document.getElementById('mainContent');
      const overlay = document.getElementById('overlay');
      
      if (sidebar && mainContent) {
        sidebar.classList.toggle('collapsed');
        
        if (window.innerWidth > 768) {
          mainContent.classList.toggle('expanded');
        } else {
          if (overlay) {
            overlay.classList.toggle('active');
          }
        }
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      const menuToggle = document.querySelector('.menu-toggle');
      const overlay = document.getElementById('overlay');
      
      if (menuToggle) {
        menuToggle.addEventListener('click', toggleSidebar);
      }
      
      if (overlay) {
        overlay.addEventListener('click', function() {
          if (window.innerWidth <= 768) {
            toggleSidebar();
          }
        });
      }
    });

    // Get job ID from URL
    const jobId = window.location.pathname.split("/").pop();

    async function loadJob() {
      try {
        const res = await fetch(`/api/students/jobs/${jobId}`, {
          credentials: "include"
        });

        const data = await res.json();

        if (!data.success || !data.jobs || data.jobs.length === 0) {
          document.getElementById("content").innerHTML = `
            <div class="error">
              <div style="font-size: 48px; margin-bottom: 16px;">‚ö†Ô∏è</div>
              <div>Job not found</div>
            </div>
          `;
          return;
        }

        displayJob(data.jobs[0]);
      } catch (err) {
        console.error('Error loading job:', err);
        document.getElementById("content").innerHTML = `
          <div class="error">
            <div style="font-size: 48px; margin-bottom: 16px;">‚ö†Ô∏è</div>
            <div>Error loading job details. Please try again.</div>
          </div>
        `;
      }
    }

    function displayJob(job) {
      const contentDiv = document.getElementById("content");
      
      const branchesHTML = job.eligibility?.allowedBranches?.map(branch => 
        `<span class="branch-tag">${branch}</span>`
      ).join('') || '<span class="branch-tag">All Branches</span>';

      const salary = new Intl.NumberFormat('en-IN', {
        style: 'currency',
        currency: 'INR',
        maximumFractionDigits: 0
      }).format(job.salary);

      const deadline = new Date(job.deadline).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      });

      contentDiv.innerHTML = `
        <div class="job-header">
          <div class="job-title">${job.title}</div>
          <div class="job-company">üè¢ ${job.companyId?.name || 'Company Name'}</div>
          <div class="job-meta">
            <div class="meta-item">
              <span class="status-badge">${job.status}</span>
            </div>
            <div class="meta-item">üí∞ ${salary}</div>
            <div class="meta-item">üìÖ Deadline: ${deadline}</div>
          </div>
        </div>

        <div class="details-grid">
          <div class="detail-card full-width">
            <div class="card-header">
              <div class="card-icon">üìù</div>
              <div class="card-title">Job Description</div>
            </div>
            <div class="description-text">${job.description}</div>
          </div>

          <div class="detail-card">
            <div class="card-header">
              <div class="card-icon">üéì</div>
              <div class="card-title">Eligibility Criteria</div>
            </div>
            <div class="info-row">
              <div class="info-label">Minimum CGPA:</div>
              <div class="info-value">${job.eligibility?.minCGPA || 'N/A'}</div>
            </div>
            <div class="info-row">
              <div class="info-label">Graduation Year:</div>
              <div class="info-value">${job.eligibility?.graduationYear || 'N/A'}</div>
            </div>
            <div class="info-row">
              <div class="info-label">Allowed Branches:</div>
              <div class="info-value">
                <div class="branches-list">${branchesHTML}</div>
              </div>
            </div>
          </div>

          <div class="detail-card">
            <div class="card-header">
              <div class="card-icon">‚ÑπÔ∏è</div>
              <div class="card-title">Additional Information</div>
            </div>
            <div class="info-row">
              <div class="info-label">Job ID:</div>
              <div class="info-value">${job._id}</div>
            </div>
            <div class="info-row">
              <div class="info-label">Salary Package:</div>
              <div class="info-value">${salary} per annum</div>
            </div>
            <div class="info-row">
              <div class="info-label">Application Deadline:</div>
              <div class="info-value">${deadline}</div>
            </div>
          </div>
        </div>

        <div class="action-section">
          <a href="/student/jobs" class="btn btn-back">‚Üê Back to Jobs</a>
          <button class="btn btn-apply" id="applyBtn" onclick="applyJob('${job._id}')">
            ‚úì Apply Now
          </button>
          <p id="msg" class="message"></p>
        </div>
      `;
    }

    async function applyJob(jobId) {
      const btn = document.getElementById("applyBtn");
      const msg = document.getElementById("msg");
      
      btn.disabled = true;
      btn.textContent = "Applying...";
      msg.className = "message";
      msg.style.display = "none";

      try {
        const res = await fetch(`/api/students/jobs/${jobId}/apply`, {
          method: "POST",
          credentials: "include"
        });

        const data = await res.json();

        if (data.success || res.ok) {
          msg.className = "message success";
          msg.textContent = data.message || "Application submitted successfully!";
          msg.style.display = "block";
          btn.textContent = "‚úì Applied";
        } else {
          msg.className = "message error";
          msg.textContent = data.message || "Failed to apply. Please try again.";
          msg.style.display = "block";
          btn.disabled = false;
          btn.textContent = "‚úì Apply Now";
        }
      } catch (error) {
        console.error('Error applying:', error);
        msg.className = "message error";
        msg.textContent = "An error occurred. Please try again.";
        msg.style.display = "block";
        btn.disabled = false;
        btn.textContent = "‚úì Apply Now";
      }
    }

    loadJob();
  </script>
</body>
</html>