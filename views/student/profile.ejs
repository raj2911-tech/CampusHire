<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Profile</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      min-height: 100vh;
      display: flex;
      background: #f5f7fa;
    }

    .sidebar {
      width: 260px;
      background: white;
      box-shadow: 2px 0 10px rgba(0,0,0,0.1);
      position: fixed;
      height: 100vh;
      overflow-y: auto;
      z-index: 100;
      transition: transform 0.3s ease;
    }

    .sidebar.collapsed {
      transform: translateX(-260px);
    }

    .sidebar-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 25px 20px;
      color: white;
    }

    .sidebar-header h1 {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 4px;
    }

    .sidebar-header p {
      font-size: 13px;
      opacity: 0.9;
    }

    .sidebar nav {
      padding: 20px 0;
    }

    .sidebar nav a {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 14px 20px;
      color: #333;
      text-decoration: none;
      transition: all 0.3s ease;
      font-size: 15px;
      font-weight: 500;
      border-left: 3px solid transparent;
    }

    .sidebar nav a:hover {
      background: #f8f9fa;
      border-left-color: #667eea;
    }

    .sidebar nav a.active {
      background: linear-gradient(90deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.05) 100%);
      color: #667eea;
      border-left-color: #667eea;
    }

    .sidebar nav a span:first-child {
      font-size: 18px;
      width: 24px;
      text-align: center;
    }

    .main-content {
      margin-left: 260px;
      flex: 1;
      min-height: 100vh;
      transition: margin-left 0.3s ease;
    }

    .main-content.expanded {
      margin-left: 0;
    }

    .top-bar {
      background: white;
      padding: 20px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      position: sticky;
      top: 0;
      z-index: 50;
    }

    .top-bar h2 {
      font-size: 24px;
      font-weight: 600;
      color: #333;
    }

    .top-bar-right {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .back-btn {
      background: #f8f9fa;
      color: #333;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .back-btn:hover {
      background: #e9ecef;
    }

    .content-area {
      padding: 30px;
      max-width: 1000px;
      margin: 0 auto;
    }

    .profile-header {
      background: white;
      border-radius: 12px;
      padding: 30px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 24px;
    }

    .profile-avatar {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 40px;
      font-weight: 600;
      flex-shrink: 0;
    }

    .profile-info {
      flex: 1;
    }

    .profile-name {
      font-size: 28px;
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
    }

    .profile-email {
      font-size: 16px;
      color: #667eea;
      margin-bottom: 12px;
    }

    .profile-meta {
      display: flex;
      gap: 20px;
      font-size: 13px;
      color: #666;
      flex-wrap: wrap;
    }

    .meta-item {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .status-badge {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 13px;
      font-weight: 600;
    }

    .status-placed {
      background: #d4edda;
      color: #27ae60;
    }

    .status-not-placed{
      background: #fff3cd;
      color: #f39c12;
    }

    .status-blacklisted {
      background: #f8d7da;
      color: #e74c3c;
    }

    .blacklist-warning {
      background: #fff3cd;
      border-left: 4px solid #f39c12;
      padding: 16px;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    .blacklist-warning-title {
      font-size: 16px;
      font-weight: 600;
      color: #856404;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .blacklist-warning-text {
      font-size: 14px;
      color: #856404;
      line-height: 1.6;
    }

  

    .blacklist-tag {
      background: #e74c3c;
      color: white;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 13px;
      font-weight: 500;
    }

    .details-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .detail-card {
      background: white;
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .detail-card.full-width {
      grid-column: 1 / -1;
    }

    .card-header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 20px;
      padding-bottom: 12px;
      border-bottom: 2px solid #f0f0f0;
    }

    .card-icon {
      width: 40px;
      height: 40px;
      border-radius: 10px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 20px;
    }

    .card-title {
      font-size: 18px;
      font-weight: 600;
      color: #333;
    }

    .info-row {
      display: flex;
      padding: 10px 0;
      border-bottom: 1px solid #f5f5f5;
    }

    .info-row:last-child {
      border-bottom: none;
    }

    .info-label {
      font-weight: 600;
      color: #666;
      min-width: 140px;
      font-size: 14px;
    }

    .info-value {
      color: #333;
      font-size: 14px;
      flex: 1;
    }

    .skills-container {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .skill-tag {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      color: #667eea;
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 13px;
      font-weight: 500;
      border: 1px solid rgba(102, 126, 234, 0.2);
    }

    .skills-form {
      background: white;
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
      font-size: 14px;
    }

    .form-group input {
      width: 100%;
      padding: 12px 16px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 15px;
      outline: none;
      transition: all 0.3s ease;
    }

    .form-group input:focus {
      border-color: #667eea;
      box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
    }

    .helper-text {
      font-size: 12px;
      color: #666;
      margin-top: 4px;
      font-style: italic;
    }

    .btn-submit {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      padding: 12px 32px;
      border-radius: 8px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    .btn-submit:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .message {
      margin-top: 16px;
      padding: 12px 16px;
      border-radius: 8px;
      text-align: center;
      font-size: 14px;
      font-weight: 500;
      display: none;
    }

    .message.success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
      display: block;
    }

    .message.error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
      display: block;
    }

    .loading {
      text-align: center;
      padding: 60px 20px;
      color: #667eea;
      font-size: 16px;
    }

    .error {
      background: white;
      border-radius: 12px;
      padding: 40px;
      text-align: center;
      color: #e74c3c;
      font-size: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .menu-toggle {
      background: none;
      border: none;
      font-size: 24px;
      cursor: pointer;
      color: #333;
      padding: 8px;
      border-radius: 6px;
      transition: background 0.2s ease;
    }

    .menu-toggle:hover {
      background: #f0f0f0;
    }

    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 99;
    }

    .overlay.active {
      display: block;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-260px);
      }

      .sidebar:not(.collapsed) {
        transform: translateX(0);
      }

      .main-content {
        margin-left: 0;
      }

      .overlay.active {
        display: block;
      }

      .details-grid {
        grid-template-columns: 1fr;
      }

      .profile-header {
        flex-direction: column;
        text-align: center;
      }

      .profile-meta {
        flex-direction: column;
        align-items: center;
      }

      .info-row {
        flex-direction: column;
        gap: 4px;
      }

      .info-label {
        min-width: auto;
      }
    }
  </style>
</head>
<body>
  <aside class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <h1>Student Portal</h1>
      <p>CampusHire</p>
    </div>
    <nav>
      <a href="/student/dashboard">
        <span>üìä</span>
        <span>Dashboard</span>
      </a>
      <a href="/student/profile" class="active">
        <span>üë§</span>
        <span>My Profile</span>
      </a>
      <a href="/student/jobs">
        <span>üíº</span>
        <span>Available Jobs</span>
      </a>
      <a href="/student/applications">
        <span>üìù</span>
        <span>My Applications</span>
      </a>
    </nav>
  </aside>

  <div class="overlay" id="overlay"></div>

  <main class="main-content" id="mainContent">
    <div class="top-bar">
      <div style="display: flex; align-items: center; gap: 15px;">
        <button class="menu-toggle" type="button">‚ò∞</button>
        <h2>My Profile</h2>
      </div>
      <div class="top-bar-right">
        <a href="/student/dashboard" class="back-btn">‚Üê Back to Dashboard</a>
      </div>
    </div>

    <div class="content-area">
      <div id="profileContent">
        <div class="loading">Loading profile...</div>
      </div>
    </div>
  </main>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const mainContent = document.getElementById('mainContent');
      const overlay = document.getElementById('overlay');
      
      if (sidebar && mainContent) {
        sidebar.classList.toggle('collapsed');
        
        if (window.innerWidth > 768) {
          mainContent.classList.toggle('expanded');
        } else {
          if (overlay) {
            overlay.classList.toggle('active');
          }
        }
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      const menuToggle = document.querySelector('.menu-toggle');
      const overlay = document.getElementById('overlay');
      
      if (menuToggle) {
        menuToggle.addEventListener('click', toggleSidebar);
      }
      
      if (overlay) {
        overlay.addEventListener('click', function() {
          if (window.innerWidth <= 768) {
            toggleSidebar();
          }
        });
      }
    });

    async function loadProfile() {
      try {
        const res = await fetch("/api/students/profile", {
          credentials: "include"
        });

        const data = await res.json();

        if (!data.success || !data.profile) {
          document.getElementById("profileContent").innerHTML = `
            <div class="error">
              <div style="font-size: 48px; margin-bottom: 16px;">‚ö†Ô∏è</div>
              <div>Profile not found</div>
            </div>
          `;
          return;
        }

        displayProfile(data.profile);
      } catch (err) {
        console.error('Error loading profile:', err);
        document.getElementById("profileContent").innerHTML = `
          <div class="error">
            <div style="font-size: 48px; margin-bottom: 16px;">‚ö†Ô∏è</div>
            <div>Error loading profile. Please try again.</div>
          </div>
        `;
      }
    }

    function displayProfile(p) {
      const contentDiv = document.getElementById("profileContent");
      
      const initial = p.name ? p.name.charAt(0).toUpperCase() : 'S';
      const statusClass = p.isPlaced ? 'status-placed' : 'status-not-placed';
      const statusText = p.isPlaced ? 'Placed' : 'Not Placed';

      // Check if student is blacklisted
      const isBlacklisted = p.blacklistedBy && p.blacklistedBy.length > 0;
      const blacklistWarning = isBlacklisted ? `
        <div class="blacklist-warning">
          <div class="blacklist-warning-title">
            <span>‚ö†Ô∏è</span>
            <span>Blacklisted Alert</span>
          </div>
          <div class="blacklist-warning-text">
            You have been blacklisted by college. 
            You cannot apply to jobs posted by these colleges.<br>
            Please contact your college placement officer.
          </div>
        </div>
      ` : '';

      const skillsHTML = p.academics?.skills && p.academics.skills.length > 0
        ? p.academics.skills.map(skill => `<span class="skill-tag">${skill}</span>`).join('')
        : '<span style="color: #999; font-style: italic;">No skills added yet</span>';

      contentDiv.innerHTML = `
        ${blacklistWarning}
        
        <div class="profile-header">
          <div class="profile-avatar">${initial}</div>
          <div class="profile-info">
            <div class="profile-name">${p.name || 'Student Name'}</div>
            <div class="profile-email">${p.email || 'email@example.com'}</div>
            <div class="profile-meta">
              <div class="meta-item">
                <span class="status-badge ${statusClass}">${statusText}</span>
              </div>
              ${isBlacklisted ? `
              <div class="meta-item">
                <span class="status-badge status-blacklisted">Blacklisted</span>
              </div>
              ` : ''}
              <div class="meta-item">üéì ${p.enrollment_no || 'N/A'}</div>
              <div class="meta-item">üèõÔ∏è ${p.collegeId?.name || 'College'}</div>
            </div>
          </div>
        </div>

        <div class="details-grid">
          <div class="detail-card">
            <div class="card-header">
              <div class="card-icon">üìö</div>
              <div class="card-title">Academic Details</div>
            </div>
            <div class="info-row">
              <div class="info-label">Branch:</div>
              <div class="info-value">${p.academics?.branch || '-'}</div>
            </div>
            <div class="info-row">
              <div class="info-label">CGPA:</div>
              <div class="info-value">${p.academics?.cgpa || '-'}</div>
            </div>
            <div class="info-row">
              <div class="info-label">Graduation Year:</div>
              <div class="info-value">${p.academics?.graduationYear || '-'}</div>
            </div>
          </div>

          <div class="detail-card">
            <div class="card-header">
              <div class="card-icon">‚ÑπÔ∏è</div>
              <div class="card-title">Personal Information</div>
            </div>
            <div class="info-row">
              <div class="info-label">Name:</div>
              <div class="info-value">${p.name || '-'}</div>
            </div>
            <div class="info-row">
              <div class="info-label">Email:</div>
              <div class="info-value">${p.email || '-'}</div>
            </div>
            <div class="info-row">
              <div class="info-label">Enrollment No:</div>
              <div class="info-value">${p.enrollment_no || '-'}</div>
            </div>
          </div>

          <div class="detail-card full-width">
            <div class="card-header">
              <div class="card-icon">üí°</div>
              <div class="card-title">Skills</div>
            </div>
            <div class="skills-container">
              ${skillsHTML}
            </div>
          </div>
        </div>

        <div class="skills-form">
          <div class="card-header">
            <div class="card-icon">‚ûï</div>
            <div class="card-title">Add Skills</div>
          </div>
          <div class="form-group">
            <label for="skillsInput">Enter Skills</label>
            <input 
              type="text" 
              id="skillsInput" 
              placeholder="e.g., JavaScript, Python, React, Node.js"
            />
            <div class="helper-text">Enter skills separated by commas</div>
          </div>
          <button class="btn-submit" id="addSkillsBtn">Add Skills</button>
          <p id="skillMsg" class="message"></p>
        </div>
      `;

      // Attach event listener to add skills button
      document.getElementById("addSkillsBtn").addEventListener("click", addSkills);
    }

    async function addSkills() {
      const input = document.getElementById("skillsInput");
      const msg = document.getElementById("skillMsg");
      const btn = document.getElementById("addSkillsBtn");

      const skills = input.value
        .split(",")
        .map(s => s.trim())
        .filter(s => s.length > 0);

      if (skills.length === 0) {
        msg.className = "message error";
        msg.textContent = "Please enter at least one skill";
        msg.style.display = "block";
        return;
      }

      btn.disabled = true;
      btn.textContent = "Adding Skills...";
      msg.className = "message";
      msg.style.display = "none";

      try {
        const res = await fetch("/api/students/skills", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          credentials: "include",
          body: JSON.stringify({ skills })
        });

        const data = await res.json();

        if (data.success || res.ok) {
          msg.className = "message success";
          msg.textContent = data.message || "Skills added successfully!";
          msg.style.display = "block";
          input.value = "";
          
          setTimeout(() => {
            loadProfile();
          }, 1000);
        } else {
          msg.className = "message error";
          msg.textContent = data.message || "Failed to add skills";
          msg.style.display = "block";
          btn.disabled = false;
          btn.textContent = "Add Skills";
        }
      } catch (error) {
        console.error('Error adding skills:', error);
        msg.className = "message error";
        msg.textContent = "An error occurred. Please try again.";
        msg.style.display = "block";
        btn.disabled = false;
        btn.textContent = "Add Skills";
      }
    }

    loadProfile();
  </script>
</body>
</html>