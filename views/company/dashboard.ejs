    }

    .job-card.closed {
      border-left-color: #e74c3c;
    }

    .job-card-header {
      display: flex;
      justify-content: space-between;
      align-items: start;
      margin-bottom: 16px;
    }

    .job-title {
      font-size: 18px;
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
    }

    .job-status {
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
    }

    .status-active {
      background: #d4edda;
      color: #27ae60;
    }

    .status-pending {
      background: #fff3cd;
      color: #f39c12;
    }

    .status-closed {
